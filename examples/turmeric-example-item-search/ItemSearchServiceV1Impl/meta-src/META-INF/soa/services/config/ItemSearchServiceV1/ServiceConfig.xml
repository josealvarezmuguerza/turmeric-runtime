<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<service-config xmlns="http://www.ebayopensource.org/turmeric/common/config" group="SecurityServiceGroup" service-name="ItemSearchServiceV1">
    <service-impl-class-name>org.ebayopensource.turmeric.search.v1.services.itemsearchservice.impl.ItemSearchServiceV1Impl</service-impl-class-name>
    <service-interface-class-name>org.ebayopensource.turmeric.search.v1.services.itemsearchservice.ItemSearchServiceV1</service-interface-class-name>
    <service-instance-config>

         <pipeline-config>
                 <request-handlers>
                	<chain name="servicehandlers">
            		
         	                <handler name="RateLimiterHandler">
                                        <class-name>org.ebayopensource.turmeric.services.ratelimiterservice.impl.handler.RateLimiterHandler</class-name>
                               	</handler>
        
        	       
	                        <handler name="ServerCredentialHandler">
				        <class-name>
					        org.ebayopensource.turmeric.securitycommon.spf.impl.handlers.ServerCredentialHandler
				        </class-name>
				        <options>
					        <option name="credential-userid">
				         	X-TURMERIC-SECURITY-USERID
				         </option>
				         <option name="credential-password">
				         	X-TURMERIC-SECURITY-PASSWORD
				         </option>
				        </options>
			        </handler>
	                </chain>				
	        	</request-handlers>				
					
	</pipeline-config>
        <protocol-processor version="1.1" name="SOAP11">
            <indicator>
                <transport-header name="X-TURMERIC-MESSAGE-PROTOCOL">SOAP11</transport-header>
            </indicator>
            <class-name>org.ebayopensource.turmeric.runtime.spf.impl.protocolprocessor.soap.ServerSOAPProtocolProcessor</class-name>
        </protocol-processor>
        <protocol-processor version="1.2" name="SOAP12">
            <indicator>
                <transport-header name="X-TURMERIC-MESSAGE-PROTOCOL">SOAP12</transport-header>
            </indicator>
            <class-name>org.ebayopensource.turmeric.runtime.spf.impl.protocolprocessor.soap.ServerSOAPProtocolProcessor</class-name>
        </protocol-processor>
    </service-instance-config>
    
</service-config>